@model IEnumerable<AtulaTask.Models.Product>

<h2>Product List</h2>
<a asp-action="Create" class="btn btn-primary">Create New Product</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Sku</th>
            <th>Categories</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Sku</td>
                <td>@string.Join(", ", product.Categories.Select(c => c.Name))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


